#!/usr/bin/env bash

getopt --test > /dev/null
if [[ $? -ne 4 ]]; then
    echo "`getopt --test` failed"
    exit 1
fi

LONGOPTIONS=boxpath:

PARSED=$(getopt --options='' --longoptions=$LONGOPTIONS --name "$0" -- "$@")
if [[ $? -ne 0 ]]; then
    exit 2
fi

eval set -- "$PARSED"
BOXPATH="/tmp/tioj-box/"

while true; do
	case "$1" in
		--boxpath)
			BOXPATH="$2"
			shift 2
			;;
		--)
			shift
			break
			;;
		*)
			echo "Unexpected error"
			exit 1
			;;
	esac
done

BOXPATH=${BOXPATH//\\/\\\\}
BOXPATH=${BOXPATH//\"/\\\"}
echo '#include "config.h"' > ./src/config.cpp
echo 'const std::string kBoxPath = "'$BOXPATH'";' >> ./src/config.cpp
